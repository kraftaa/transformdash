# Database Connection Environment Variables
# Copy this file to .env and fill in your actual credentials
# The .env file is git-ignored for security

# JWT Secret Key (REQUIRED for authentication)
# Generate a secure key using: python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET_KEY=

# Database Passwords (REQUIRED for production)
# Generate strong passwords using: openssl rand -base64 32
POSTGRES_PASSWORD=
TRANSFORMDASH_PASSWORD=
APP_PASSWORD=

# pgAdmin Password (optional, only if using pgAdmin)
PGADMIN_PASSWORD=
PGADMIN_EMAIL=admin@transformdash.local

# TransformDash Database (Default)
TRANSFORMDASH_HOST=localhost
TRANSFORMDASH_PORT=5432
TRANSFORMDASH_DB=transformdash
TRANSFORMDASH_USER=postgres

# APP Production Database
APP_HOST=localhost
APP_PORT=5432
APP_DB=production
APP_USER=postgres

# Postgres Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
